<div style="float: left;
    overflow: hidden;
    width: 200px;min-height: 450px">
<ul>
  <h3>Category</h3>
<% Category.all.each do |category| %>
  <li class="category"><h4><%= link_to category.name, "/?category=#{category.id}",:class => "#{category.name}" %></h4>
  <ul style="display:none">
    <% category.subcategories.each do |subcategory| %>
        <li><%= link_to subcategory.name, "/?subcategory=#{subcategory.id}", :class => "#{subcategory.name}" %></li>
    <% end %>
  </ul>
  </li>
<% end %>
</ul>

